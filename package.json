{
  "name": "node-debt-snowball",
  "version": "2.1.0",
  "description": "Node script to calculate debt repayment using the snowball method",
  "publishConfig": {
    "access": "public"
  },
  "types": "./dist/cjs/types/index.d.ts",
  "main": "./dist/cjs/index.js",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/types/index.d.ts",
        "default": "./dist/esm/index.mjs"
      },
      "require": {
        "types": "./dist/cjs/types/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prepare": "husky || true",
    "lint": "prettier --write . && eslint --fix .",
    "test": "jest",
    "release": "release-it",
    "dev": "node examples/index.js",
    "prepublishOnly": "npm run build",
    "clean": "rm -rf ./dist",
    "build:esm": "tsc -p ./config/tsconfig.esm.json",
    "postbuild:esm": "mv dist/esm/index.js dist/esm/index.mjs",
    "build:cjs": "tsc -p ./config/tsconfig.cjs.json",
    "postbuild:cjs": "echo 'module.exports = debtSnowball;' >> dist/cjs/index.js",
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "docs": ".bin/docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nielse63/node-debt-snowball.git"
  },
  "keywords": [
    "finance",
    "debt-snowball",
    "debt-manager",
    "fintech",
    "personal-finance"
  ],
  "author": "Erik Nielsen <erik@312development.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nielse63/node-debt-snowball/issues"
  },
  "homepage": "https://github.com/nielse63/node-debt-snowball#readme",
  "engines": {
    "node": ">=20.11.1"
  },
  "devDependencies": {
    "@babel/core": "^7.22.10",
    "@babel/preset-env": "^7.22.10",
    "@babel/preset-typescript": "^7.22.5",
    "@types/jest": "^29.5.4",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "babel-jest": "^29.6.3",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^28.2.0",
    "eslint-plugin-jest-extended": "^2.0.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.6.3",
    "jest-extended": "^4.0.1",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "release-it": "^17.2.0",
    "typedoc": "^0.25.13",
    "typescript": "^5.4.5"
  },
  "lint-staged": {
    "*.js,ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,html,scss,css}": "prettier --write"
  }
}
