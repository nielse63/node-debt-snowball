{
  "name": "node-debt-snowball",
  "version": "2.5.0",
  "description": "Node script to calculate debt repayment using the snowball method",
  "publishConfig": {
    "access": "public"
  },
  "types": "./dist/types/index.d.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "prepare": "husky || true",
    "lint": "eslint --fix . && prettier --write .",
    "test": "jest",
    "release": "release-it",
    "predev": "npm run build",
    "dev": "nodemon --exec \"npm run build && node examples/index.js\"",
    "prepublishOnly": "npm run build",
    "clean": "rm -rf ./dist",
    "build": ".bin/build",
    "docs": ".bin/docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nielse63/node-debt-snowball.git"
  },
  "keywords": [
    "finance",
    "debt-snowball",
    "debt-manager",
    "fintech",
    "personal-finance"
  ],
  "author": "Erik Nielsen <erik@312development.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nielse63/node-debt-snowball/issues"
  },
  "homepage": "https://github.com/nielse63/node-debt-snowball#readme",
  "engines": {
    "node": ">=20.19.5"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-typescript": "^7.27.1",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "babel-jest": "^29.6.3",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^28.14.0",
    "eslint-plugin-jest-extended": "^2.0.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^29.6.3",
    "jest-extended": "^4.0.1",
    "lint-staged": "^15.5.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "release-it": "^19.0.5",
    "typedoc": "^0.25.13",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.js,ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,html,scss,css}": "prettier --write"
  },
  "nodemonConfig": {
    "ignore": [
      "**/__tests__/**"
    ],
    "watch": [
      "src"
    ],
    "env": {
      "NODE_ENV": "development"
    },
    "ext": "ts,json"
  }
}
