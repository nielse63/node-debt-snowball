npx lint-staged

# build docs
changed_files=$(git diff --cached --name-only)
build_docs=

for file in $changed_files; do
  if [[ $file = src* || $file = "README.md" ]]; then
    build_docs=true
    break
  fi
done
if [ $build_docs ]; then
  echo ""
  echo "Building docs..."
  npm run docs
  git add docs
fi
